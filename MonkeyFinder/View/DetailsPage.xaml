<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonkeyFinder.View.DetailsPage"
             xmlns:viewmodel ="clr-namespace:MonkeyFinder.ViewModel"
             x:DataType="viewmodel:MonkeyDetailsViewModel"
             Title="{Binding Monkey.Name}">

    <ScrollView>
        <VerticalStackLayout>
            <Grid ColumnDefinitions="*, Auto, *"
                  RowDefinitions="160, Auto">
                <BoxView BackgroundColor="{x:StaticResource Primary}" 
                         Grid.ColumnSpan="3"
                         HeightRequest="160"
                         HorizontalOptions="FillAndExpand" />
                <Label Style="{StaticResource LargeLabel}" 
                   Grid.Row="1"
                   TextColor="White"
                   FontAttributes="Bold"
                   Text="{Binding Monkey.Name}" 
                   HorizontalOptions="Center"
                   Margin="0,0,0,8"/>
                <Frame Grid.RowSpan="2"
                       Grid.Column="1"
                       WidthRequest="160"
                       HeightRequest="160"
                       CornerRadius="80"
                       Padding="0"
                       HorizontalOptions="Center"
                       IsClippedToBounds="True"
                       Margin="0, 80, 0, 0">
                    <Image Aspect="AspectFill" 
                               Source="{Binding Monkey.Image}"
                               WidthRequest="160"
                               HeightRequest="160"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>               
                </Frame>


            </Grid>

            <VerticalStackLayout Padding="10" Spacing="10">
                <Label Text="{Binding Monkey.Details}" Style="{StaticResource MediumLabel}" />
                <Label Text="{Binding Monkey.Location, StringFormat='Location : {0}'}" Style="{StaticResource SmallLabel}" />
                <Label Text="{Binding Monkey.Population, StringFormat='Popuplation : {0}'}" Style="{StaticResource SmallLabel}" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>